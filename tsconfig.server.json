{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "types": ["node", "express-fileupload"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "server.ts",
    "src/lib/**/*",
    "src/middleware/**/*",
    "src/models/**/*",
    "src/routes/**/*",
    "src/scripts/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/vite-env.d.ts"
  ]
}